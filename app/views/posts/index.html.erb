<div class="cont">      
  <%= render 'shared/navbar'  %>
  <%= render 'shared/left_navbar' %>
  <%= render 'shared/suggestion' %>
  <main>
    <header class="tab">
      <%= link_to "Posts", '', class: "tab-link is-flex"%>
    </header>

    <div class="main-wrapper">
      <%= render 'post_form' %>
        <div class="new-posts-container has-background-white mt-5">
          <div class="new-posts-header">
            NEW POSTS
          </div>
          <% @posts.each do |post| %>
          <div class="new-posts-list py-5">
            <div class="post is-flex">
              <%= user_photo(post.author) %>
              <div class="post-content">
                <%= link_to users_show_path(post.author), class: 'mx-3' do %>
                  <%= post.author.full_name %>
                <% end %> <br>
                <%= content_tag :p, class: 'mx-3' do %>
                  <%= post.text %>
                <% end %>
              </div>
            </div>
          </div>
          <% end %>
        </div>
    </div>
  </main>
</div>